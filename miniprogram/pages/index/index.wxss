/**index.wxss**/
.page {
  padding: 40rpx 32rpx 60rpx;
  box-sizing: border-box;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.subtitle {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #7a7a7a;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f1f1f;
  margin-bottom: 20rpx;
}

.field {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label {
  width: 200rpx;
  font-size: 26rpx;
  color: #5a5a5a;
}

.input {
  flex: 1;
  height: 68rpx;
  padding: 0 20rpx;
  background: #f5f6f8;
  border-radius: 14rpx;
  font-size: 26rpx;
  color: #222;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.stat {
  flex: 1;
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.stat-label {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #7a7a7a;
}

.btn {
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.btn.primary {
  background: #1a73e8;
  color: #fff;
}

.btn.secondary {
  background: #f1f4f9;
  color: #1f1f1f;
}

.btn.ghost {
  background: transparent;
  color: #1a73e8;
}

.timer {
  text-align: center;
  font-size: 48rpx;
  font-weight: 600;
  color: #1f1f1f;
  margin-bottom: 16rpx;
}

.timer-actions {
  display: flex;
  gap: 16rpx;
}

.timer-actions .btn {
  flex: 1;
}
