<view class="page">
  <view class="header">
    <text class="title">学习统计</text>
    <text class="subtitle">回顾你的学习轨迹</text>
  </view>

  <view class="card">
    <view class="card-title">累计数据</view>
    <view class="stats-row">
      <view class="stat">
        <text class="stat-value">{{totalMinutes}}</text>
        <text class="stat-label">累计学习(分)</text>
      </view>
      <view class="stat">
        <text class="stat-value">{{totalCheckins}}</text>
        <text class="stat-label">累计打卡(天)</text>
      </view>
    </view>
  </view>

  <view class="card">
    <view class="card-title">本周概览</view>
    <view class="stats-row">
      <view class="stat">
        <text class="stat-value">{{weekMinutes}}</text>
        <text class="stat-label">本周学习(分)</text>
      </view>
      <view class="stat">
        <text class="stat-value">{{weekDays}}</text>
        <text class="stat-label">本周打卡(天)</text>
                </view>
              </view>
            </view>
          </view>
